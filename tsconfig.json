{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2017"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "core-js",
      "mocha"
    ],
    "outDir": "./build"
  },
  "exclude": [
    "node_modules",
    "__tests__/**/*.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ]
}